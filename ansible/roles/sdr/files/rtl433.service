[Unit]
Description = RTL 433 listening service
After = network.target

[Service]
ExecStart = /home/pi/home-automation/temperature/ea2/daemon.sh
StandardOutput=append:/var/ha/rtl/temp.csv
StandardError=append:/var/log/ha/ea2.log
WorkingDirectory=/var/ha/rtl/
User=pi
Restart=on-always
RestartSec=30s

[Install]
WantedBy = multi-user.target
